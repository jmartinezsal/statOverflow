doctype html
include utils.pug
html
  head
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")

  block head
    title= title
    link(rel='stylesheet' href='/stylesheets/index.css')
  body
    nav(class="nav")
      div(class="nav__brand")
        a(href="/")
          img(src="/images/nav_brand.png")
      if locals.authenticated
        div(class="nav__user")
          div(class="nav__user-info")
            span Welcome, #{user.username}!
            br
            a(href='/logout')
              span Logout
          if (user.avatarImage)
            div(class="nav__user-avatar")
              img(src=user.avatarImage)
      else
        div(class="nav__cpanel")
          a(href="/signup")
            span Sign Up
          a(href="/login")
            span Login
            //- div(id="open-modal" class="modal-window")
