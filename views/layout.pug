doctype html
include utils.pug
html
  head
    block head
      title= title
      link(rel='stylesheet' href='/stylesheets/index.css')
      script(src="/javascripts/index.js" type="module" defer)
  body
    nav(class="nav")
      div(class="nav__brand")
        a(href="/")
          img(src="/images/nav_brand.png")
      if locals.authenticated
        p works
        div(class="nav__user")
          div(class="nav__user-info")
            span #{user.username}
            br
            span Logout
          if (user.avatarImage)
            div(class="nav__user-avatar")
              img(src=user.avatarImage)
          else
            div(class="nav__user-avatar")
              img(src="https://brighterwriting.com/wp-content/uploads/icon-user-default-420x420.png")
      else
        div(class="nav__cpanel")
          a(href="/signup")
            span Sign Up
          a(href="/login")
            span Login
