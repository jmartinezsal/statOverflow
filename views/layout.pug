  if path !=='/signup' && path !=='/login' && path !== '/new-question'
    #left__sidebar
        a(href='/')
          i.fa.fa-home(aria-hidden='true')
            i Home
        a(href='/questions')
          i Questions
        a(href='/users')
         i.fa.fa-users(aria-hidden='true')
          i Users
        if locals.authenticated && path !== '/new-question'
          a(href='/new-question' class="button") Ask Question

